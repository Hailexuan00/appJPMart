<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bg_jpmart"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle"
            android:contentDescription="Avatar"
            android:layout_marginEnd="12dp" />

        <!-- Thông tin nhân viên -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMaTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NV001 - Nguyễn Văn A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/tvDiaChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 ABC, HCM"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.000.000 đ"
                android:textSize="14sp"
                android:textColor="#009688"/>

            <TextView
                android:id="@+id/tvChucVu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân viên"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Nút sửa/xóa -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_edit_24"
                android:contentDescription="Sửa"/>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_delete"
                android:layout_marginStart="8dp"
                android:contentDescription="Xóa"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
