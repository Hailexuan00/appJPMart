<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Ảnh danh mục -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bg_jpmart"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_circle"
            android:layout_marginEnd="12dp" />

        <!-- Thông tin danh mục -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenDM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Danh Mục"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvMaDM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Danh Mục"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Các nút chức năng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnEditDM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit_24"
                android:contentDescription="Sửa"
                card_view:tint="@android:color/holo_blue_dark" />

            <ImageButton
                android:id="@+id/btnDeleteDM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Xoá"
                card_view:tint="@android:color/holo_red_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
